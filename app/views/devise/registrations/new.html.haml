.container
  %h2.hdr4 Registrese en Boutique de Carnes  
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    .row
      .form-inputs
        .span3.offset2          
          = f.input :first_name
          = f.input :last_name          
          = f.input :telephone
          = f.input :address
        .span3
          = f.input :email
          = f.input :password
          = f.input :password_confirmation
          %br
          = f.button :submit, "Registrarse"   
    .row
      .span3.offset2
       