%h1 Listing users
%table
  %thead
    %tr
      %th Email
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
      %tr
        %td Products
        - user.cart_products.each do |v|
          %td
          %td= v.price
